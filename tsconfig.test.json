{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "out/test",
    "sourceMap": true,
    "rootDir": ".",
    "lib": [
      "es2020",
      "dom",
      "dom.iterable",
      "webworker",
      "webworker.importscripts"
    ],
    "types": [
      "node",
      "mocha",
      "chai",
      "@types/vscode"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@types/vscode"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    ".vscode-test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test/**/node_modules"
  ]
}
