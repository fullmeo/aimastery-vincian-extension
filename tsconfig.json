{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out",
    "aimastery-backend-api",
    "api",
    "backend",
    "server",
    "test",
    "docs",
    "backup",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
