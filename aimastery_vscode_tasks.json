{
	// AIMastery VS Code Tasks - Automatisation complÃ¨te
	"version": "2.0.0",
	"tasks": [
		{
			"label": "ğŸš€ Build Extension AIMastery",
			"type": "shell",
			"command": "vsce package",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": "$tsc"
		},
		{
			"label": "ğŸ’° Test Stripe APIs",
			"type": "shell", 
			"command": "curl",
			"args": [
				"-X", "GET",
				"https://scorescout.eu/health",
				"-H", "Content-Type: application/json"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always"
			}
		},
		{
			"label": "ğŸ”§ Start Local Webhook Server",
			"type": "shell",
			"command": "node",
			"args": ["server.js"],
			"options": {
				"env": {
					"NODE_ENV": "development",
					"PORT": "3000"
				}
			},
			"group": "serve",
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "ğŸŒ Start ngrok Tunnel", 
			"type": "shell",
			"command": "ngrok",
			"args": ["http", "3000"],
			"group": "serve",
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "ğŸ“Š Generate Revenue Report",
			"type": "shell",
			"command": "curl",
			"args": [
				"-X", "GET", 
				"https://scorescout.eu/admin/metrics",
				"-H", "Authorization: Bearer ${env:ADMIN_TOKEN}"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always"
			}
		},
		{
			"label": "ğŸ¯ Full AIMastery Workflow",
			"dependsOrder": "sequence",
			"dependsOn": [
				"ğŸ”§ Start Local Webhook Server",
				"ğŸŒ Start ngrok Tunnel",
				"ğŸ’° Test Stripe APIs",
				"ğŸš€ Build Extension AIMastery"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "ğŸ§ª Test Extension in New Window",
			"type": "shell",
			"command": "code",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--new-window"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "silent"
			}
		},
		{
			"label": "ğŸ“¦ Package & Publish Extension",
			"type": "shell",
			"command": "vsce",
			"args": ["publish"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always"
			},
			"dependsOn": "ğŸš€ Build Extension AIMastery"
		},
		{
			"label": "ğŸ”„ Sync Stripe Products",
			"type": "shell",
			"command": "node",
			"args": ["scripts/sync-stripe-products.js"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always"
			}
		}
	]
}